<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mapActivityContainer"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/mapContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomLayout">

        <fragment
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".app.activity.MapsActivity">
        </fragment>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/confirmRouteButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onRoute"
            android:text="Confirm Route"
            android:visibility="gone" />

        <HorizontalScrollView
            android:id="@+id/unitChoicesScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/footSoldier"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="onSelectUnit"
                    android:text="@string/footSoldier" />

                <Button
                    android:id="@+id/marauder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="onSelectUnit"
                    android:text="@string/marauder" />
            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>
</RelativeLayout>
